<span>
  <% if current_user.likes.find_by(micropost_id: micropost.id) %>
    <%= link_to 'いいねを取り消す', unlike_path(micropost.id), method: :delete, remote: true %>
  <% else %>
    <%= link_to 'いいね！', like_path(micropost.id), method: :post, remote: true %>
  <% end %>
</span>
<span>
  <% if micropost.likes.count > 0 %>
    <%= micropost.likes.count %>人がいいね！といっています
  <% end %>
</span>