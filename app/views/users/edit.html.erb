<h1>
    ユーザ情報更新
</h1>
<%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
     <label for="input_name" class="col-sm-2 control-label">名前:</label>
     <div class="col-sm-10">
         <%= f.text_field :name, class:'form-control', id:'input_name', placeholder: @user.name %>
    </div>
  </div>
  <div class="form-group">
     <label for="input_mail" class="col-sm-2 control-label">メールアドレス:</label>
     <div class="col-sm-10">
         <%= f.text_field :email, class:'form-control', id:'input_mail', placeholder: @user.email %>
    </div>
  </div>
    <div class="form-group">
     <label for="input_age" class="col-sm-2 control-label">年齢:</label>
     <div class="col-sm-10">
         <%= f.text_field :age, class:'form-control', id:'input_age', placeholder: @user.age %>
    </div>
  </div>
    <div class="form-group">
     <label for="input_area" class="col-sm-2 control-label">地域:</label>
     <div class="col-sm-10">
         <%= f.text_field :area, class:'form-control', id:'input_area', placeholder: @user.area %>
    </div>
  </div>
  <div class="form-group">
      <div class="col-sm-2 col-sm-offset-10">
          <%= f.submit class: "btn btn-sm btn-primary" %>
     </div>
  </div>
<% end %>